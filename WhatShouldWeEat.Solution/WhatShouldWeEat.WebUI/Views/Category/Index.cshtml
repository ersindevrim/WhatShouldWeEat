@model IEnumerable<WhatShouldWeEat.Entities.categories>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4 wow fadeIn">

    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">

        <h4 class="mb-2 mb-sm-0 pt-1">
            <a href="/Admin/Index">Admin</a>
            <span>/</span>
            <span>Kategoriler</span>
        </h4>
    </div>

</div>
<div class="col-md-12 mb-4">
    <div class="card">
        <div class="card-body">
            @Html.ActionLink("Yeni Kategori Ekle", "Create", null, new { @class = "btn btn-primary" })
            <table class="table table-hover">
                <thead class="blue lighten-4">
                    <tr>
                        <th>
                            @Html.DisplayName("ID")
                        </th>
                        <th>
                            @Html.DisplayName("Category Key")
                        </th>
                        <th>
                            @Html.DisplayName("Category Name")
                        </th>
                        <th style="width: 300px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categorykey)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryname)
                    </td>
                    <td>
                        @Html.ActionLink("Duzenle", "Edit", new { id = item.id }, new { @class = "btn btn-success btn-sm" })
                        @Html.ActionLink("Sil", "Delete", new { id = item.id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
