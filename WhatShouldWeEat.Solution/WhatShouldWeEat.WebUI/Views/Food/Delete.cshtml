@model WhatShouldWeEat.Entities.foods
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card mb-4 wow fadeIn">
    <!--Card content-->
    <div class="card-body d-sm-flex justify-content-between">
        <h4 class="mb-2 mb-sm-0 pt-1">
            <a href="/Admin/Index">Admin</a>
            <span>/</span>
            <span>
                <a href="/Food/Index">Yemekler</a>
            </span>
            <span>/</span>
            <span>Yemek Sil</span>
        </h4>
    </div>
</div>
<div class="card">
    <div class="card-header">Kategori Sil</div>
    <div class="card-body">
        <div class="alert alert-danger" role="alert">
            <b>@Model.foodname</b> isimli yemeği silmek istediğinize eminmisiniz?
        </div>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("food Key")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.foodkey)
                </dd>
                <dt>
                    @Html.DisplayName("food Name")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.foodname)
                </dd>
                <dt>
                    @Html.DisplayName("category Key")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.categorykey)
                </dd>
                <dt>
                    @Html.DisplayName("is approved")
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.isapproved)
                </dd>
            </dl>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Sil" class="btn btn-danger" />
                    @Html.ActionLink("İptal", "Index", "Food", null, new { @class = "btn btn-info" })
                </div>
            }
        </div>
    </div>
</div>